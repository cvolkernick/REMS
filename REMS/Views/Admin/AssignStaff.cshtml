@model REMS.ViewModels.AssignStaffViewModel

@{
    ViewBag.Title = "Assign Staff";
}

<h2>@ViewBag.Title</h2>

<h3>Select a Staff Member to Assign</h3>

@Html.Partial("~/Views/Shared/Partials/ActionStatusPartial.cshtml", Model.ActionStatusMessageViewModel)

@using (Html.BeginForm("AssignStaff", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Choose a User to Assign", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName", Model.Users, " ")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Choose a Staff Member to Assign", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("StaffMember", Model.StaffMembers, " ")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Select" />
        </div>
    </div>
}